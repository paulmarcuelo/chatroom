<h1 class="text-center">
    Chat Room
</h1>

<hr>

<div id="messages" style="border: 1px solid black; width: 50%; height: 500px; overflow: scroll;">
    <% @messages.each do |message| %>
        <%= render 'messages/message', message: message %>
    <% end %>
</div>

<div id="chatbox">
    <%= form_for(@message) do |form| %>
        <%= form.text_field :body, class: 'form-control' %>
        <%= form.submit 'Send', class: 'btn btn-secondary' %>
    <% end %>
</div>